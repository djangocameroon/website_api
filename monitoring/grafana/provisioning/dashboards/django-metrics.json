{
  "dashboard": {
    "title": "Django Metrics",
    "uid": "django-metrics",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "HTTP Requests",
        "targets": [
          {
            "expr": "rate(django_http_requests_before_middlewares_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "type": "graph",
        "title": "HTTP Response Status",
        "targets": [
          {
            "expr": "rate(django_http_responses_before_middlewares_total[5m])",
            "legendFormat": "Responses/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "type": "graph",
        "title": "Request Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(django_http_requests_latency_including_middlewares_seconds_bucket[5m]))",
            "legendFormat": "p95 latency"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "type": "graph",
        "title": "Database Connections",
        "targets": [
          {
            "expr": "django_db_new_connections_total",
            "legendFormat": "DB Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "schemaVersion": 16,
    "version": 0
  }
}
